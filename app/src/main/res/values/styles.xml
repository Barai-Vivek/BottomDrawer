<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Plain" parent="BottomDialogTheme">
        <item name="bottom_sheet_extra_padding">14dp</item>
        <item name="should_draw_under_status_bar">true</item>
    </style>

    <style name="Pull" parent="BottomDialogTheme">
        <item name="bottom_sheet_extra_padding">0dp</item>
        <item name="bottom_sheet_corner_radius">26dp</item>
    </style>

</resources>
